<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--목적 : MainActivity에서 불러올 다이얼로그를 꾸며준다.-->

    <!--EditText를 하면 밑선이 자동으로 생기는데,background 설정을 해주면 없앨 수 있다. -->
    <EditText
        android:id="@+id/healthMemo"
        android:background="@android:color/transparent"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:hint="운동 메모를 입력해주세요."
        android:layout_height="wrap_content"/>

    <!--배운 것 : LinearLayout을 감싸는 용도가 아니라, height을 얇게해서 선처럼 보이게 만들 수도 있다.-->
    <LinearLayout
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"/>

    <!--이제 버튼을 만들자-->

    <Button
        android:id="@+id/dateSelectBtn"
        android:text="날짜를 선택해주세요."
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <!--데이터를 저장하는 버튼을 만든다.
        버튼을 누르면 데이터가 데이터 베이스로 이동하게 만들어야한다.-->
    <!--배운 것 : 버튼을 눌렀을 때, 데이터를 저장하는 방법을 배운다.
        내가 이 부분 모르니까 잘 배울 것!-->
    <Button
        android:id="@+id/saveBtn"
        android:textColor="@color/black"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="저장하기"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>


</LinearLayout>